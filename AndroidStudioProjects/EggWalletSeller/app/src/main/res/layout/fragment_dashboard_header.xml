<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_dark">

        <!--<com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/txtName"
            style="@style/AppTheme.StyledText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:text="ADITYA AGRAWAL"
            android:textColor="@color/white"
            android:textSize="14sp" />-->

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/txtAmount"
            style="@style/AppTheme.StyledText.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="30dp"
            android:text="@string/Rs5000"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/txtWalletBalance"
            style="@style/AppTheme.StyledText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAmount"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="Wallet Balance"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtWalletBalance"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnSendMoney"
                style="@style/AppTheme.StyledText.Bold"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.5"
                android:background="@drawable/abc_alpha_white_btn_background"
                android:padding="5dp"
                android:text="@string/send_money"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRequestMoney"
                style="@style/AppTheme.StyledText.Bold"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="25dp"
                android:layout_weight="0.5"
                android:background="@drawable/abc_alpha_white_btn_background"
                android:padding="5dp"
                android:text="@string/request_money"
                android:textColor="@color/primary"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>