<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUpdatProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                android:text="BASIC INFORMATION"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black" />

            <com.egnese.buyers.ui.CustomEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@mipmap/abc_dr_menu_name_mtrl_am_alpha"
                android:drawablePadding="15dp"
                android:hint="Name"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#DDAAAAAA"
                android:textCursorDrawable="@drawable/color_cursor" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?android:attr/listDivider" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtSelectCity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:alpha="0.5"
                android:text="Select City"
                android:drawableLeft="@drawable/ic_arrow_drop_down_white_24dp"
                android:textColor="@color/black" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?android:attr/listDivider" />

            <com.egnese.buyers.ui.CustomEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_arrow_drop_down_white_24dp"
                android:hint="Email"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#DDAAAAAA"
                android:textCursorDrawable="@drawable/color_cursor" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?android:attr/listDivider" />

            <com.egnese.buyers.ui.CustomEditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_arrow_drop_down_white_24dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#DDAAAAAA"
                android:textCursorDrawable="@drawable/color_cursor" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?android:attr/listDivider" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtDOB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/AppTheme.StyledText"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:alpha="0.5"
                android:text="Date of Birth"
                android:drawableLeft="@drawable/ic_arrow_drop_down_white_24dp"
                android:textColor="@color/black" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
