<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/imgDashboardSingleRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_launcher" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/txtDashboardSingleRowTitle"
        style="@style/AppTheme.StyledText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgDashboardSingleRow"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Akash Bangad"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/txtDashboardSingleRowTDisc"
        style="@style/AppTheme.StyledText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDashboardSingleRowTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/imgDashboardSingleRow"
        android:alpha="0.5"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:text="Akash Bangad"
        android:textColor="@color/black"
        android:textSize="14sp" />
</RelativeLayout>